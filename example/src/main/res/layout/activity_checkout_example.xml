<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/regularLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/plugandplay"/>

            <com.mercadopago.android.px.internal.view.MPTextView
                style="@style/big_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:singleLine="false"
                android:text="@string/checkout_title"/>

            <com.mercadopago.android.px.internal.view.MPTextView
                style="@style/form_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:singleLine="false"
                android:text="@string/checkout_description"/>

            <Button
                android:id="@+id/continueButton"
                style="@style/px_button_normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_button_height"
                android:layout_marginTop="25dp"
                android:text="@string/continue_label"/>

            <Button
                android:id="@+id/customInitializeButton"
                style="@style/px_button_normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_button_height"
                android:layout_marginTop="25dp"
                android:text="@string/custom_initialize_button"/>

            <Button
                android:id="@+id/select_checkout"
                style="@style/px_button_normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_button_height"
                android:layout_marginTop="25dp"
                android:text="@string/select_checkout"/>

            <Button
                android:id="@+id/lazy_init"
                style="@style/px_button_normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_button_height"
                android:layout_marginTop="25dp"
                android:text="@string/lazy"/>

            <Button
                android:id="@+id/payment_congrats_button"
                style="@style/px_button_normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_button_height"
                android:layout_marginTop="25dp"
                android:text="@string/payment_congrats_init"/>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"/>

</FrameLayout>
